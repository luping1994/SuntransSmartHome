<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbarheight"
            android:background="@color/colorPrimary"
            app:contentInsetLeft="0.0dip"
            app:contentInsetStart="0.0dip"
            app:layout_collapseMode="pin"
            app:titleTextAppearance="@style/Appbar_apperance"
            app:navigationIcon="@drawable/back_selector_new"
            app:popupTheme="@style/Scene_Pop_AppTheme"
            app:theme="@style/ToolBarTheme">

        </android.support.v7.widget.Toolbar>

       <LinearLayout
           android:orientation="vertical"
           android:background="@color/white"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <RelativeLayout
               android:id="@+id/llDianyuan"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:background="@color/white"
               android:paddingLeft="@dimen/activity_horizontal_margin">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:text="电源:"
                   android:textColor="@color/black" />


               <android.support.v7.widget.AppCompatCheckBox
                   android:id="@+id/dianyuan"
                   style="@style/CustomCheckBoxTheme"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_alignParentRight="true"
                   android:clickable="false"
                   android:gravity="center|right" />
           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <RelativeLayout
                   android:id="@+id/llguanbi"
                   android:layout_width="match_parent"
                   android:layout_height="200dp"
                   android:background="#aaaa9288"
                   android:orientation="vertical"
                   android:visibility="gone">

                   <TextView
                       android:id="@+id/guabi"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerInParent="true"
                       android:gravity="center"
                       android:text="关闭"
                       android:textColor="@color/white"
                       android:textSize="25sp" />

               </RelativeLayout>

               <RelativeLayout
                   android:id="@+id/lldakai"
                   android:layout_width="match_parent"
                   android:layout_height="200dp"
                   android:background="#bfd1d1"
                   android:orientation="vertical">

                   <TextView
                       android:id="@+id/wnedu"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerInParent="true"
                       android:gravity="center"
                       android:text="温度"
                       android:textColor="@color/white"
                       android:textSize="18sp"
                       android:visibility="gone" />

                   <TextView
                       android:id="@+id/wendu"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentBottom="true"
                       android:layout_marginBottom="50dp"
                       android:layout_marginLeft="100dp"
                       android:gravity="center"
                       android:text="16℃"
                       android:textColor="@color/white"
                       android:textSize="50dp" />

                   <TextView
                       android:id="@+id/mode"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentBottom="true"
                       android:layout_centerHorizontal="true"
                       android:layout_marginBottom="50dp"
                       android:layout_marginLeft="8dp"
                       android:layout_toRightOf="@+id/wendu"
                       android:gravity="center"
                       android:text="制冷模式"
                       android:textColor="@color/white"
                       android:textSize="25sp" />
               </RelativeLayout>
           </RelativeLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="64dp"
               android:layout_marginTop="20dp"
               android:gravity="center">

               <Button
                   android:id="@+id/sub"
                   android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:background="@drawable/condition_button"
                   android:onClick="subTemp"
                   android:text="一"
                   android:textColor="@color/white" />

               <ImageButton
                   android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:layout_marginLeft="16dp"
                   android:background="@drawable/condition_button"
                   android:onClick="shutdown"
                   android:scaleType="centerInside"
                   android:src="@drawable/ic_power" />

               <Button
                   android:id="@+id/add"
                   android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:layout_marginLeft="16dp"
                   android:background="@drawable/condition_button"
                   android:onClick="addTemp"
                   android:text="十"
                   android:textColor="@color/white" />


           </LinearLayout>

           <LinearLayout
               android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:orientation="horizontal">

               <Button
                   android:id="@+id/zhileng"
                   android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:layout_marginLeft="16dp"
                   android:background="@drawable/condition_button"
                   android:onClick="switchModel"
                   android:text="制冷"
                   android:textColor="@color/white" />

               <Button
                   android:id="@+id/zhire"
                   android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:layout_marginLeft="16dp"
                   android:background="@drawable/condition_button"
                   android:onClick="switchModel"
                   android:text="制热"
                   android:textColor="@color/white" />

               <Button
                   android:id="@+id/tongfeng"
                   android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:layout_marginLeft="16dp"
                   android:background="@drawable/condition_button"
                   android:onClick="switchModel"
                   android:text="通风"
                   android:textColor="@color/white" />

               <Button
                   android:id="@+id/chushi"
                   android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:layout_marginLeft="16dp"
                   android:background="@drawable/condition_button"
                   android:onClick="switchModel"
                   android:text="除湿"
                   android:textColor="@color/white" />
           </LinearLayout>

       </LinearLayout>
    </LinearLayout>
</layout>