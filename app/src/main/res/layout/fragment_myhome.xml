<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="info"
            type="net.suntrans.suntranssmarthome.homepage.device.sensus.SensusResult.Sensus" />

    </data>

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@id/base_scene_sll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:id="@id/appbar"
            android:layout_width="match_parent"
            android:layout_height="216.0dip"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@id/collapsing_toolbar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?colorPrimary"
                app:expandedTitleMarginEnd="64.0dip"
                app:expandedTitleMarginStart="48.0dip"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <RelativeLayout
                    android:fitsSystemWindows="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_collapseMode="parallax">


                    <ImageView
                        android:id="@id/base_scene_head_bg"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:fitsSystemWindows="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_original_bg_custom" />


                    <LinearLayout
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:id="@+id/wendu_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="16dp"
                        android:gravity="center">
                        <TextView
                            android:text="室内"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:id="@+id/wendu"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text='@{info.wendu.substring(0,2)}'
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </LinearLayout>

                </RelativeLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@id/toolbar"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/actionbarheight"
                    app:contentInsetLeft="0.0dip"
                    app:contentInsetStart="0.0dip"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/Scene_Pop_AppTheme">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="48.0dip"
                        android:layout_marginTop="3.0dip">

                        <ImageView
                            android:id="@id/base_iv_scene_back"
                            android:layout_width="30.0dip"
                            android:layout_height="30.0dip"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="13.0dip"
                            android:src="@drawable/back_selector_new"
                            android:visibility="gone" />

                        <TextView
                            android:id="@id/base_tv_scene_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="18.0dip"
                            android:layout_toRightOf="@id/base_iv_scene_back"
                            android:text="@string/myhome"
                            android:textColor="@color/white"
                            android:textSize="16.0sp" />

                        <TextView
                            android:id="@id/base_iv_more_action"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="13.0dip"
                            android:gravity="center_vertical"
                            android:text="@string/text_more"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </RelativeLayout>
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@id/scene_ns_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:clipToPadding="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="#fefefe"
                    android:elevation="3dp"
                    android:minHeight="160dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp">

                        <RelativeLayout
                            android:id="@+id/header"
                            android:layout_width="match_parent"
                            android:layout_height="35dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="场景"
                                android:textColor="@color/black" />

                            <ImageView
                                android:id="@+id/add_model"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/ic_add_blue_grey_500_24dp"
                                tools:ignore="VectorDrawableCompat" />
                        </RelativeLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/header">

                            <TextView
                                android:id="@+id/noModel"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/tips_no_model"
                                android:textSize="16sp"
                                android:visibility="gone" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recyclerview_scene"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scrollbars="none">

                            </android.support.v7.widget.RecyclerView>
                        </FrameLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="#fefefe"
                    android:elevation="3dp"
                    android:minHeight="160dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp">

                        <RelativeLayout
                            android:id="@+id/header_room"
                            android:layout_width="match_parent"
                            android:layout_height="35dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="房间"
                                android:textColor="@color/black" />

                            <ImageView
                                android:id="@+id/add_room"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/ic_add_blue_grey_500_24dp"
                                tools:ignore="VectorDrawableCompat" />
                        </RelativeLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/header_room">

                            <TextView
                                android:id="@+id/noRoom"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/tips_no_room"
                                android:textSize="16sp"
                                android:visibility="gone" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recyclerview_room"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scrollbars="none">

                            </android.support.v7.widget.RecyclerView>
                        </FrameLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="#fefefe"
                    android:elevation="3dp"
                    android:minHeight="160dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp">

                        <RelativeLayout
                            android:id="@+id/header_best"
                            android:layout_width="match_parent"
                            android:layout_height="35dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/item_header_best"
                                android:textColor="@color/black" />

                            <ImageView
                                android:id="@+id/add_best"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/ic_add_blue_grey_500_24dp"
                                tools:ignore="VectorDrawableCompat" />
                        </RelativeLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/header_best">

                            <TextView
                                android:id="@+id/noBest"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/tips_no_best"
                                android:textSize="16sp"
                                android:visibility="visible" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recyclerview_best"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scrollbars="none">

                            </android.support.v7.widget.RecyclerView>
                        </FrameLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>


    </android.support.design.widget.CoordinatorLayout>
</layout>