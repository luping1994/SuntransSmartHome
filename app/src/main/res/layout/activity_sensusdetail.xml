<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="info"
            type="net.suntrans.smarthome.bean.SensusResult.Sensus" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbarheight"

            android:background="?attr/colorPrimary"
            android:fitsSystemWindows="false"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/Toolbar">

            <TextView
                android:transitionName="@string/item_toolbar_name"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="@string/main_devices_"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </android.support.v7.widget.Toolbar>


        <net.suntrans.smarthome.widget.ScrollChildSwipeRefreshLayout
           android:id="@+id/refreshlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bgcolor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="40dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dip"
                            android:layout_height="24dip"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dip"
                            android:scaleType="fitCenter"
                            android:src="@drawable/time" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="45dip"
                            android:layout_marginLeft="10dip"
                            android:gravity="center|left"
                            android:text="最后更新时间"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="15dip"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:maxLines="1"
                            android:text="@{info.created_at}"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <ImageView
                        style="@style/line_horizontal_middle_gray"
                        android:layout_marginLeft="13.0dip"
                        android:layout_marginRight="13.0dip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="40dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dip"
                            android:layout_height="24dip"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dip"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_pm" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="45dip"
                            android:layout_marginLeft="10dip"
                            android:gravity="center|left"
                            android:text="PM1"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="15dip"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:maxLines="1"
                            android:text='@{info.pm1==null?"--":info.pm1+"ppm"}'
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <ImageView
                        style="@style/line_horizontal_middle_gray"
                        android:layout_marginLeft="13.0dip"
                        android:layout_marginRight="13.0dip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dip"
                            android:layout_height="24dip"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dip"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_pm" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="45dip"
                            android:layout_marginLeft="10dip"
                            android:gravity="center|left"
                            android:text="PM10"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="15dip"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:maxLines="1"
                            android:text='@{info.pm10==null?"--":info.pm10+"ppm"}'
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <ImageView
                        style="@style/line_horizontal_middle_gray"
                        android:layout_marginLeft="13.0dip"
                        android:layout_marginRight="13.0dip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dip"
                            android:layout_height="24dip"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dip"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_pm" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="45dip"
                            android:layout_marginLeft="10dip"
                            android:gravity="center|left"
                            android:text="PM25"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="15dip"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:maxLines="1"
                            android:text='@{info.pm25==null?"--":info.pm25+"ppm"}'
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <ImageView
                        style="@style/line_horizontal_middle_gray"
                        android:layout_marginLeft="13.0dip"
                        android:layout_marginRight="13.0dip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="40dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dip"
                            android:layout_height="24dip"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dip"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_smoke" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="45dip"
                            android:layout_marginLeft="10dip"
                            android:gravity="center|left"
                            android:text="甲醛"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="15dip"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:maxLines="1"
                            android:text='@{info.jiaquan==null?"--":info.jiaquan+"ppm"}'
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <ImageView
                        style="@style/line_horizontal_middle_gray"
                        android:layout_marginLeft="13.0dip"
                        android:layout_marginRight="13.0dip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
