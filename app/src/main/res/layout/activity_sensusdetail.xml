                        android:layout_marginLeft="13.0dip"
                        android:layout_marginRight="13.0dip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dip"
                            android:layout_height="24dip"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dip"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_temp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="45dip"
                            android:layout_marginLeft="10dip"
                            android:gravity="center|left"
                            android:text="温度"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="15dip"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:maxLines="1"
                            android:text='@{info.wendu==null?"--":info.wendu+"°C"}'
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <ImageView

                        style="@style/line_horizontal_middle_gray"
                        android:layout_marginLeft="13.0dip"
                        android:layout_marginRight="13.0dip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dip"
                            android:layout_height="24dip"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dip"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_humidity" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="45dip"
                            android:layout_marginLeft="10dip"
                            android:gravity="center|left"
                            android:text="湿度"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="15dip"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:maxLines="1"
                            android:text='@{info.shidu==null?"--":info.shidu+"%"}'
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <ImageView
                        style="@style/line_horizontal_middle_gray"
                        android:layout_marginLeft="13.0dip"
                        android:layout_marginRight="13.0dip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dip"
                            android:layout_height="24dip"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dip"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_peopleinfo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="45dip"
                            android:layout_marginLeft="10dip"
                            android:gravity="center|left"
                            android:text="人员"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="15dip"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:maxLines="1"
                            android:text='@{info.renyuan==null?"--":info.renyuan.equals("1")?"有人":"没人"}'
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <ImageView
                        style="@style/line_horizontal_middle_gray"
                        android:layout_marginLeft="13.0dip"
                        android:layout_marginRight="13.0dip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="40dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dip"
                            android:layout_height="24dip"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dip"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_gradient" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="45dip"
                            android:layout_marginLeft="10dip"
                            android:gravity="center|left"
                            android:text="X轴倾斜角"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="15dip"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:maxLines="1"
                            android:text='@{info.x_zhou==null?"--":info.x_zhou+"°"}'
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <ImageView
                        style="@style/line_horizontal_middle_gray"
                        android:layout_marginLeft="13.0dip"
                        android:layout_marginRight="13.0dip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dip"
                            android:layout_height="24dip"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dip"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_gradient" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="45dip"
                            android:layout_marginLeft="10dip"
                            android:gravity="center|left"
                            android:text="Y轴倾斜角"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="15dip"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:maxLines="1"
                            android:text='@{info.y_zhou==null?"--":info.y_zhou+"°"}'
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <ImageView
                        style="@style/line_horizontal_middle_gray"
                        android:layout_marginLeft="13.0dip"
                        android:layout_marginRight="13.0dip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dip"
                            android:layout_height="24dip"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dip"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_gradient" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="45dip"
                            android:layout_marginLeft="10dip"
                            android:gravity="center|left"
                            android:text="Z轴倾斜角"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="15dip"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:maxLines="1"
                            android:text='@{info.z_zhou==null?"--":info.z_zhou+"°"}'
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <ImageView
                        style="@style/line_horizontal_middle_gray"
                        android:layout_marginLeft="13.0dip"
                        android:layout_marginRight="13.0dip" />
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </net.suntrans.smarthome.widget.ScrollChildSwipeRefreshLayout>
