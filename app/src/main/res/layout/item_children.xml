<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/item_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:transitionName="@string/item_toolbar_name"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">


        <net.suntrans.suntranssmarthome.widget.CircleImageView
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/pic_myhome_model_get_up"
            android:layout_centerVertical="true"
            android:id="@+id/imageView"
            android:layout_width="36dp"
            android:layout_height="36dp"
           />

        <LinearLayout
            android:layout_toRightOf="@+id/imageView"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="插座"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="厨房"
                android:textColor="@color/scan_sencond_text_color"
                android:textSize="14sp" />
        </LinearLayout>

       <android.support.v7.widget.AppCompatCheckBox
           android:id="@+id/checkbox"
           style="@style/CustomCheckBoxTheme_2"
           android:layout_alignParentRight="true"
           android:gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="match_parent" />
    </RelativeLayout>
