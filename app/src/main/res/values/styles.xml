    <!--场景toolbar样式-->
    <style name="Scene_Pop_AppTheme" parent="@style/ThemeOverlay.AppCompat.Light" />

    <!--toolbar右边图标样式-->
    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_add_black_24dp</item>
    </style>


    <!--右边toolbar图标为+号-->
    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
    </style>

    <!--自定义checkbox样式-->
    <style name="CustomCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <style name="CustomCheckBoxTheme_2" parent="@android:style/Widget.CompoundButton.CheckBox">
